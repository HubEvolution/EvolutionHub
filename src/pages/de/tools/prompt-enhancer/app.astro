---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getLocale } from '@/lib/i18n';
import { getI18n } from '@/utils/i18n';
import EnhancerForm from '@/components/tools/prompt-enhancer/EnhancerForm';
import Card from '@/components/ui/Card';

const locale = getLocale(Astro.url.pathname);
const t = getI18n(locale);
---

<BaseLayout
  title={`${t('pages.tools.items.Prompt-Enhancer.name_de')} â€“ Evolution Hub`}
  description={t('pages.tools.items.Prompt-Enhancer.description_de')}
>
  <main class="min-h-screen bg-transparent py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="sr-only">{t('pages.tools.items.Prompt-Enhancer.name_de')}</h1>
      <div class="mt-2 text-sm text-gray-500 dark:text-gray-400">
        {t('pages.tools.details.Prompt-Enhancer.privacy.text_de')}
      </div>

      <Card as="div" className="mt-8 p-4 sm:p-6">
        <EnhancerForm client:load />
      </Card>
    </div>
  </main>
</BaseLayout>
