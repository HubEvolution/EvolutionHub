---
import AuthLayout from '@/layouts/AuthLayout.astro';
import AuthStatusNotifier from '@/components/scripts/AuthStatusNotifier';
import MagicLinkForm from '@/components/auth/MagicLinkForm.astro';
import Button from '@/components/ui/Button.astro';
import Icon from '@/components/ui/icons/Icon.astro';
import { getI18n } from '@/utils/i18n';
import { localizePath } from '@/lib/locale-path';
import { getLocale } from '@/lib/i18n';

const locale = getLocale(Astro.url.pathname);
const t = getI18n(locale);
const locals = Astro.locals as any;

const magicBanner = Astro.url.searchParams.get('success') === 'magic_sent';
const magicText =
  t('pages.auth.magic.success') ?? 'Prüfe deine E‑Mails auf den Anmelde‑Link.';

// Weiterleitungspfad (nur relative Pfade erlauben) für Magic Link Flow
const rParam = Astro.url.searchParams.get('r') ?? '';
const safeR =
  typeof rParam === 'string' && rParam.startsWith('/') && !rParam.startsWith('//') ? rParam : '';

// OAuth GitHub button label (single source of truth)
const githubText = t('pages.login.form.oauth.github') ?? 'Mit GitHub anmelden';
const noAccountPrompt = t('pages.login.form.no_account_prompt') ?? 'Sie haben noch kein Konto?';
const registerLinkText = t('pages.login.form.register_link') ?? 'Registrieren';

if (locals.user) {
  return Astro.redirect(localizePath(locale, '/dashboard'));
}
---

<AuthLayout title={t('pages.login.title') ?? 'Anmelden'}>
  <div
    class="relative p-6 rounded-2xl overflow-hidden bg-white dark:bg-gray-800/50 border border-gray-200 dark:border-white/10 shadow-sm"
  >
    <h1 class="text-2xl font-bold text-center mb-6">
      {t('pages.login.form.heading') ?? 'Melden Sie sich bei Ihrem Konto an'}
    </h1>

    {magicBanner && (
      <div class="mb-4 rounded-md border border-emerald-200 bg-emerald-50 text-emerald-800 px-4 py-2 text-sm">
        {magicText}
      </div>
    )}

    <MagicLinkForm locale={locale} mode="login" r={safeR} />

    <div class="my-4 flex items-center gap-3 text-gray-500 dark:text-gray-400">
      <div class="h-px bg-gray-200 dark:bg-white/10 flex-1"></div>
      <span class="text-xs uppercase tracking-wider">{t('pages.login.form.or') ?? 'oder'}</span>
      <div class="h-px bg-gray-200 dark:bg-white/10 flex-1"></div>
    </div>

    <form method="GET" action="/api/auth/oauth/github/start" class="block">
      {safeR && <input type="hidden" name="r" value={safeR} />}
      <Button type="submit" variant="outline" fullWidth>
        <Icon name="github" className="w-5 h-5 mr-2" />
        {githubText}
      </Button>
    </form>
    <p class="text-center mt-4 text-sm">
      {noAccountPrompt}
      <a href={localizePath(locale, '/register')} class="text-emerald-600 hover:underline"
        >{registerLinkText}</a
      >
    </p>
  </div>
  <AuthStatusNotifier mode="login" client:load />
</AuthLayout>
