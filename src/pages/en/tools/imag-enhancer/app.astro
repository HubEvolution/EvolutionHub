---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getLocale } from '@/lib/i18n';
import { getI18n } from '@/utils/i18n';
import { localizePath } from '@/lib/locale-path';
import Icon from '@/components/ui/Icon.astro';
import ComingSoon from '@/components/ui/ComingSoon.astro';

const locale = getLocale(Astro.url.pathname);
const t = getI18n(locale);

const tool = {
  id: 'Imag-Enhancer',
  icon: 'tool'
};
---

<BaseLayout title={`${t('pages.tools.items.Imag-Enhancer.name')} â€“ Evolution Hub`} description={t('pages.tools.items.Imag-Enhancer.description')}>
  <main class="min-h-screen bg-transparent py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
      <div class="flex items-start gap-6">
        <div class="flex-shrink-0">
          <div class="w-16 h-16 rounded-lg flex items-center justify-center text-3xl bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200">
            <Icon name={tool.icon} class="w-10 h-10 text-gray-800 dark:text-gray-200" ariaLabel={t('pages.tools.items.Imag-Enhancer.name')} />
          </div>
        </div>
        <div>
          <h1 class="text-2xl sm:text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white">
            {t('pages.tools.items.Imag-Enhancer.name')}
          </h1>
          <div class="mt-2">
            <a href={localizePath(locale, '/tools/imag-enhancer')} class="text-sm text-gray-500 dark:text-gray-400 hover:underline">
              {t('pages.tools.details.Imag-Enhancer.back')}
            </a>
          </div>
          <p class="mt-4 text-gray-600 dark:text-gray-300">
            {t('pages.tools.items.Imag-Enhancer.description')}
          </p>
        </div>
      </div>

      <section class="mt-10 bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <h2 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-white">
          {t('pages.tools.items.Imag-Enhancer.name')} App
        </h2>
        <div id="imag-enhancer-root" class="mt-6 min-h-[200px] rounded-md border border-dashed border-gray-300 dark:border-gray-700 p-6" aria-label={`${t('pages.tools.items.Imag-Enhancer.name')} root`}>
        </div>
      </section>
    </div>
  </main>

  <ComingSoon dismissible={true} />
</BaseLayout>
