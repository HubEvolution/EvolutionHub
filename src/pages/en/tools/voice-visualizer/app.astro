---
import BaseLayout from '@/layouts/BaseLayout.astro';
import VoiceVisualizerIsland from '@/components/tools/voice-visualizer/VoiceVisualizerIsland';
import ToolPageHeader from '@/components/tools/shared/ToolPageHeader.astro';
---

<BaseLayout title="Voice Visualizer & Transcriber">
  <main class="min-h-screen bg-transparent py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <ToolPageHeader
        icon="microphone"
        titleKey="pages.tools.items.voice-visualizer.name"
        descriptionKey="pages.tools.items.voice-visualizer.description"
        backHref="/tools"
      />
      <VoiceVisualizerIsland
        client:load
        strings={{
          title: 'Voice Visualizer & Transcriber',
          description: 'Record your voice, see a live waveform, and get instant transcriptions.',
          start: 'Start Recording',
          stop: 'Stop',
          usage: 'Usage',
          loading: 'loading…',
          transcript: 'Transcript',
          error: 'An error occurred',
          rateLimited: (s: number) => `Rate limited. Retry in ${s}s…`,
        }}
        langHint="en"
      />
    </div>
  </main>
</BaseLayout>
