---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ToolPageHeader from '@/components/tools/shared/ToolPageHeader.astro';
import WebEvalIsland from '@/components/tools/web-eval/WebEvalIsland';
const strings = {
  urlPlaceholder: 'https://example.com',
  taskPlaceholder: 'Describe what to check on the page…',
  submitButton: 'Create task',
  usage: 'Usage',
  myTasks: 'My Tasks',
  reportTitle: 'Report',
  resetLabel: 'Web-Eval daily limit resets at',
  assertionsTitle: 'Assertions (optional)',
  addAssertion: 'Add assertion',
  assertionsEmpty: 'No assertions configured',
  assertionKindTextIncludes: 'Text includes',
  assertionKindSelectorExists: 'Selector exists',
  verdictLabel: 'Verdict',
  assertionsSectionTitle: 'Assertions',
  assertionsHint:
    'If you leave the list empty, Web-Eval creates simple automatic assertions from your description.',
  headlessLabel: 'Realistic desktop profile',
  headlessHint:
    'Uses a typical desktop user profile (user agent & viewport) in the Cloudflare headless browser.',
  abortLabel: 'Abort',
  liveTitle: 'Live',
  liveFinalSnapshotLabel: '(final snapshot)',
  livePhaseLabel: 'Phase',
  livePhaseNav: 'nav',
  livePhaseAssertions: 'assertions',
  livePhaseCleanup: 'cleanup',
  liveHintBrowserUnavailable: 'Browser backend currently unavailable.',
  liveHintAssertionsFailed: 'One or more assertions failed (see report).',
  toasts: {
    invalidUrl: 'Invalid URL',
    invalidTask: 'Invalid task description',
    quotaReached: 'Daily limit reached',
    created: 'Task created',
    error: 'An error occurred',
  },
};
---

<BaseLayout
  title="Web‑Eval – Evolution Hub"
  description="Autonomous web evaluation with tasks, reports, and usage limits"
>
  <main class="min-h-screen bg-transparent py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <ToolPageHeader
        icon="rocket"
        titleKey="pages.tools.items.web-eval.name"
        descriptionKey="pages.tools.items.web-eval.description"
        backHref="/tools"
      />
      <div class="mt-8">
        <WebEvalIsland client:load strings={strings} />
      </div>
    </div>
  </main>
</BaseLayout>
