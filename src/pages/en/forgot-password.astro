---
import AuthLayout from '@/layouts/AuthLayout.astro';
import AuthStatusNotifier from '@/components/scripts/AuthStatusNotifier';
import Input from '@/components/ui/Input.astro';
import { getI18n } from '@/utils/i18n';

import { getLocale } from '@/lib/i18n';
const locale = getLocale(Astro.url.pathname);
const t = getI18n(locale);
---

<AuthLayout title={t('pages.forgotPassword.title') ?? 'Forgot Password'}>
  <h1 class="text-2xl font-bold mb-6 text-center">{t('pages.forgotPassword.form.heading') ?? 'Forgot Password'}</h1>
  <form method="POST" action="/api/auth/forgot-password">
    <div class="mb-4">
      <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">{t('pages.forgotPassword.form.fields.email.label') ?? 'Email'}</label>
      <Input type="email" id="email" name="email" required />
    </div>
    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      {t('pages.forgotPassword.form.submit_button') ?? 'Send Password Reset Link'}
    </button>
  </form>
  <AuthStatusNotifier mode="forgot-password" client:load />
</AuthLayout>