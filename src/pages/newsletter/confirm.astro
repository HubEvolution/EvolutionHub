---
// src/pages/newsletter/confirm.astro
// Newsletter double opt-in confirmation landing page

import BaseLayout from '@/layouts/BaseLayout.astro';
import Icon from '@/components/ui/Icon.astro';
import { localizePath } from '@/lib/locale-path';
import { getLocale } from '@/lib/i18n';

// Get query parameters
const url = Astro.url;
const token = url.searchParams.get('token');
const email = url.searchParams.get('email');

// Initialize confirmation state
interface ConfirmationResult {
  success: boolean;
  error?: string;
  subscription_date?: string;
}

let confirmationResult: ConfirmationResult | null = null;
let error: string | null = null;
const locale = getLocale(Astro.url.pathname);

// If token is provided, attempt confirmation
if (token) {
  try {
    const confirmResponse = await fetch(
      `${url.origin}/api/newsletter/confirm?token=${token}&email=${email || ''}`
    );
    const json: unknown = await confirmResponse.json();
    if (json && typeof json === 'object') {
      confirmationResult = json as ConfirmationResult;
    } else {
      error = 'Unexpected confirmation response';
    }

    if (!confirmResponse.ok) {
      error = confirmationResult?.error || 'Unknown error occurred';
    }
  } catch (err) {
    console.error('Error confirming subscription:', err);
    error = 'Network error occurred while confirming subscription';
  }
}

// SEO meta information
const seoTitle = confirmationResult?.success
  ? 'Newsletter-Anmeldung bestätigt'
  : 'Newsletter-Anmeldung bestätigen';
const seoDescription = confirmationResult?.success
  ? 'Ihre Newsletter-Anmeldung wurde erfolgreich bestätigt. Vielen Dank für Ihr Interesse!'
  : 'Bestätigen Sie Ihre Newsletter-Anmeldung, um exklusive Inhalte und Updates zu erhalten.';
---

<BaseLayout title={seoTitle} description={seoDescription}>
  <main
    class="min-h-screen bg-gradient-to-br from-emerald-50 to-cyan-50 dark:from-gray-900 dark:to-gray-800 py-12"
  >
    <div class="container mx-auto px-4 max-w-2xl">
      {/* Success State */}
      {
        confirmationResult?.success && (
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 text-center">
            {/* Success Icon */}
            <div class="w-20 h-20 bg-emerald-100 dark:bg-emerald-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg
                class="w-10 h-10 text-emerald-600 dark:text-emerald-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"
                />
              </svg>
            </div>

            {/* Success Message */}
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
              <span class="inline-flex items-center gap-2">
                <Icon
                  name="celebration"
                  class="w-6 h-6 text-emerald-600 dark:text-emerald-400 inline-block"
                  ariaLabel="Celebration"
                />
                Newsletter-Anmeldung bestätigt!
              </span>
            </h1>

            <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
              Vielen Dank, <strong>{email}</strong>! Ihre Newsletter-Anmeldung wurde erfolgreich
              bestätigt.
            </p>

            {/* Benefits */}
            <div class="bg-emerald-50 dark:bg-emerald-900/20 rounded-lg p-6 mb-8">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
                Das erwartet Sie in unserem Newsletter:
              </h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left">
                <div class="flex items-start space-x-3">
                  <Icon
                    name="celebration"
                    class="w-5 h-5 text-emerald-600 dark:text-emerald-400 inline-block"
                    ariaLabel="Celebration"
                  />
                  <span class="text-gray-700 dark:text-gray-300">
                    Exklusive Einblicke in New Work und Produktivität
                  </span>
                </div>
                <div class="flex items-start space-x-3">
                  <Icon
                    name="rocket"
                    class="w-5 h-5 text-emerald-600 dark:text-emerald-400 inline-block"
                    ariaLabel="Rocket"
                  />
                  <span class="text-gray-700 dark:text-gray-300">
                    Frühen Zugang zu neuen Features und Tools
                  </span>
                </div>
                <div class="flex items-start space-x-3">
                  <Icon
                    name="chart"
                    class="w-5 h-5 text-emerald-600 dark:text-emerald-400 inline-block"
                    ariaLabel="Chart"
                  />
                  <span class="text-gray-700 dark:text-gray-300">
                    Praktische Tipps für die moderne Arbeitswelt
                  </span>
                </div>
                <div class="flex items-start space-x-3">
                  <Icon
                    name="lightbulb"
                    class="w-5 h-5 text-emerald-600 dark:text-emerald-400 inline-block"
                    ariaLabel="Lightbulb"
                  />
                  <span class="text-gray-700 dark:text-gray-300">
                    Inspiration für Ihre berufliche Entwicklung
                  </span>
                </div>
              </div>
            </div>

            {/* Call-to-Action */}
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href={localizePath(locale, '/blog')}
                class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-emerald-500 to-cyan-500 text-white font-semibold rounded-lg hover:from-emerald-600 hover:to-cyan-600 transition-all duration-300 transform hover:scale-105"
                aria-label="Explore our blog"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  />
                </svg>
                Blog entdecken
              </a>
              <a
                href={localizePath(locale, '/tools')}
                class="inline-flex items-center px-6 py-3 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-semibold rounded-lg border border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-all duration-300"
                aria-label="Explore our tools"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                </svg>
                Tools erkunden
              </a>
            </div>

            {/* Subscription Info */}
            <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-600">
              <p class="text-sm text-gray-500 dark:text-gray-400">
                Bestätigt am:{' '}
                {new Date(confirmationResult?.subscription_date ?? Date.now()).toLocaleDateString(
                  'de-DE',
                  {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                  }
                )}
              </p>
            </div>
          </div>
        )
      }

      {/* Error State */}
      {
        (error || (confirmationResult && !confirmationResult.success)) && (
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 text-center">
            {/* Error Icon */}
            <div class="w-20 h-20 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg
                class="w-10 h-10 text-red-600 dark:text-red-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.664-.833-2.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"
                />
              </svg>
            </div>

            {/* Error Message */}
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
              Newsletter-Bestätigung fehlgeschlagen
            </h1>

            <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
              {error || confirmationResult?.error || 'Ein unbekannter Fehler ist aufgetreten.'}
            </p>

            {/* Common Solutions */}
            <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-6 mb-8 text-left">
              <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                Mögliche Lösungen:
              </h2>
              <ul class="space-y-2 text-gray-700 dark:text-gray-300">
                <li class="flex items-start space-x-2">
                  <span class="text-emerald-600 dark:text-emerald-400">•</span>
                  <span>Überprüfen Sie, ob der Link vollständig kopiert wurde</span>
                </li>
                <li class="flex items-start space-x-2">
                  <span class="text-emerald-600 dark:text-emerald-400">•</span>
                  <span>Der Bestätigungslink ist nur 24 Stunden gültig</span>
                </li>
                <li class="flex items-start space-x-2">
                  <span class="text-emerald-600 dark:text-emerald-400">•</span>
                  <span>Versuchen Sie eine erneute Anmeldung über unser Formular</span>
                </li>
              </ul>
            </div>

            {/* Actions */}
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href={localizePath(locale, '/blog')}
                class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-emerald-500 to-cyan-500 text-white font-semibold rounded-lg hover:from-emerald-600 hover:to-cyan-600 transition-all duration-300"
                aria-label="Try subscribing again"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
                  />
                </svg>
                Erneut anmelden
              </a>
              <a
                href={localizePath(locale, '/kontakt')}
                class="inline-flex items-center px-6 py-3 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 font-semibold rounded-lg border border-gray-200 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-600 transition-all duration-300"
                aria-label="Contact support"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                  />
                </svg>
                Support kontaktieren
              </a>
            </div>
          </div>
        )
      }

      {/* No Token State */}
      {
        !token && (
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-8 text-center">
            {/* Info Icon */}
            <div class="w-20 h-20 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg
                class="w-10 h-10 text-blue-600 dark:text-blue-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
            </div>

            <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
              Newsletter-Bestätigung
            </h1>

            <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
              Bitte klicken Sie auf den Bestätigungslink in der E-Mail, die wir Ihnen gesendet
              haben.
            </p>

            <a
              href={localizePath(locale, '/blog')}
              class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-emerald-500 to-cyan-500 text-white font-semibold rounded-lg hover:from-emerald-600 hover:to-cyan-600 transition-all duration-300"
            >
              Zum Blog
            </a>
          </div>
        )
      }
    </div>
  </main>
</BaseLayout>

<script>
  // Client-side analytics tracking for confirmation page
  document.addEventListener('DOMContentLoaded', () => {
    const urlParams = new URLSearchParams(window.location.search);
    const token = urlParams.get('token');
    const email = urlParams.get('email');

    if (token) {
      // Track confirmation page visit
      console.log('Analytics: newsletter_confirmation_page_visit', {
        token_present: true,
        email_present: !!email,
        timestamp: new Date().toISOString(),
      });
    }
  });
</script>
