---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getI18n } from '@/utils/i18n';
import { getLocale } from '@/lib/i18n';
import Card from '@/components/ui/Card';
import { contactInfo } from '@/config/contact';

const locale = getLocale(Astro.url.pathname);
const t = getI18n(locale);

const pageTitle = t('pages.kontakt.title');
const heroHeading = t('pages.kontakt.hero.heading');
const heroSubtitle = t('pages.kontakt.hero.subtitle');
---

<BaseLayout title={pageTitle}>
  <!-- Hero Section -->
  <section
    class="py-16 md:py-24 allow-section-bg bg-gradient-to-br from-primary/5 to-purple-500/5 dark:from-gray-800 dark:to-gray-900"
  >
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1
          class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 dark:text-white [text-shadow:_0_1px_0_rgb(255_255_255_/_0.6)] dark:[text-shadow:_0_1px_0_rgb(0_0_0_/_0.35)]"
        >
          {heroHeading}
        </h1>
        <p class="text-xl text-gray-700 dark:text-gray-300 mb-8">
          {heroSubtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form Section (transparent background to show landing BG) -->
  <section class="py-16 md:py-24 bg-transparent">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <Card as="div" className="rounded-2xl overflow-hidden p-0">
          <div class="grid md:grid-cols-2">
            <!-- Contact Form -->
            <div class="p-8 md:p-10">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
                {t('pages.kontakt.form.heading')}
              </h2>

              <form
                class="space-y-6"
                data-contact-form
                data-success-message={t('pages.kontakt.form.feedback.success')}
                data-error-message={t('pages.kontakt.form.feedback.error')}
                data-generic-error={t('pages.kontakt.form.feedback.generic_error')}
                data-sending-message={t('pages.kontakt.form.feedback.sending')}
              >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label
                      for="first-name"
                      class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                      >{t('pages.kontakt.form.fields.first_name.label')}</label
                    >
                    <input
                      type="text"
                      id="first-name"
                      name="first-name"
                      required
                      class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition duration-200"
                    />
                  </div>
                  <div>
                    <label
                      for="last-name"
                      class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                      >{t('pages.kontakt.form.fields.last_name.label')}</label
                    >
                    <input
                      type="text"
                      id="last-name"
                      name="last-name"
                      required
                      class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition duration-200"
                    />
                  </div>
                </div>

                <div>
                  <label
                    for="email"
                    class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                    >{t('pages.kontakt.form.fields.email.label')}</label
                  >
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition duration-200"
                  />
                </div>

                <div>
                  <label
                    for="subject"
                    class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                    >{t('pages.kontakt.form.fields.subject.label')}</label
                  >
                  <input
                    type="text"
                    id="subject"
                    name="subject"
                    required
                    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition duration-200"
                  />
                </div>

                <div>
                  <label
                    for="message"
                    class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                    >{t('pages.kontakt.form.fields.message.label')}</label
                  >
                  <textarea
                    id="message"
                    name="message"
                    rows="4"
                    required
                    class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition duration-200"
                    placeholder={t('pages.kontakt.form.fields.message.placeholder')}></textarea>
                </div>

                <div class="flex items-center">
                  <input
                    id="privacy-policy"
                    name="privacy-policy"
                    type="checkbox"
                    required
                    class="h-4 w-4 text-emerald-600 focus:ring-emerald-500 border-gray-300 rounded"
                  />
                  <label
                    for="privacy-policy"
                    class="ml-2 block text-sm text-gray-700 dark:text-gray-300"
                  >
                    {t('pages.kontakt.form.privacy_policy.agree_prefix')}
                    <a
                      href={locale === 'en' ? '/en/datenschutz' : '/datenschutz'}
                      class="text-emerald-600 hover:text-emerald-500 dark:text-emerald-400 dark:hover:text-emerald-300"
                      >{t('pages.kontakt.form.privacy_policy.link_text')}</a
                    >
                    {t('pages.kontakt.form.privacy_policy.agree_suffix')}
                  </label>
                </div>

                <div>
                  <button
                    type="submit"
                    class="w-full flex justify-center py-3 px-6 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gradient-to-r from-emerald-500 to-cyan-500 hover:from-emerald-600 hover:to-cyan-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition duration-200"
                    data-contact-submit
                  >
                    {t('pages.kontakt.form.submit_button')}
                  </button>
                </div>
                <p class="text-sm" data-contact-feedback hidden></p>
              </form>
            </div>

            <!-- Contact Info -->
            <div
              class="allow-section-bg bg-gradient-to-br from-emerald-50 to-cyan-50 dark:from-gray-800 dark:to-gray-900 p-8 md:p-10 flex flex-col justify-center"
            >
              <div class="space-y-6">
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                    {t('pages.kontakt.info.heading')}
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 text-sm">
                    {t('pages.kontakt.info.subtitle')}
                  </p>
                </div>

                <div class="space-y-4">
                  <div class="flex items-start">
                    <div
                      class="flex-shrink-0 h-10 w-10 rounded-lg bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center"
                    >
                      <svg
                        class="h-5 w-5 text-emerald-600 dark:text-emerald-400"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="1.5"
                          d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        ></path>
                      </svg>
                    </div>
                    <div class="ml-4">
                      <p class="text-sm font-medium text-gray-900 dark:text-white">
                        {t('pages.kontakt.info.email_label')}
                      </p>
                      {contactInfo.email && (
                        <a
                          href={`mailto:${contactInfo.email}`}
                          class="text-sm text-emerald-600 hover:text-emerald-500 dark:text-emerald-400 dark:hover:text-emerald-300"
                        >
                          {contactInfo.email}
                        </a>
                      )}
                    </div>
                  </div>

                  <div class="flex items-start">
                    <div
                      class="flex-shrink-0 h-10 w-10 rounded-lg bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center"
                    >
                      <svg
                        class="h-5 w-5 text-emerald-600 dark:text-emerald-400"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="1.5"
                          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        ></path>
                      </svg>
                    </div>
                    <div class="ml-4">
                      <p class="text-sm font-medium text-gray-900 dark:text-white">
                        {t('pages.kontakt.info.phone_label')}
                      </p>
                      <p class="text-sm text-gray-600 dark:text-gray-300">
                        {contactInfo.supportHours || t('pages.kontakt.info.support_hours')}
                      </p>
                      {contactInfo.phone ? (
                        <a
                          href={`tel:${contactInfo.phone}`}
                          class="text-sm text-emerald-600 hover:text-emerald-500 dark:text-emerald-400 dark:hover:text-emerald-300"
                        >
                          {contactInfo.phone}
                        </a>
                      ) : (
                        <span class="text-sm text-gray-400 dark:text-gray-500">
                          {t('pages.kontakt.info.phone_unavailable')}
                        </span>
                      )}
                    </div>
                  </div>

                  <div class="flex items-start">
                    <div
                      class="flex-shrink-0 h-10 w-10 rounded-lg bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center"
                    >
                      <svg
                        class="h-5 w-5 text-emerald-600 dark:text-emerald-400"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="1.5"
                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        ></path>
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="1.5"
                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                    </div>
                    <div class="ml-4">
                      <p class="text-sm font-medium text-gray-900 dark:text-white">
                        {t('pages.kontakt.info.address_label')}
                      </p>
                      {contactInfo.address ? (
                        <address class="not-italic text-sm text-gray-600 dark:text-gray-300">
                          {contactInfo.address.lines.map((line, idx) => (
                            <span class={idx === 0 ? '' : 'block'}>{line}</span>
                          ))}
                        </address>
                      ) : (
                        <p class="text-sm text-gray-400 dark:text-gray-500">
                          {t('pages.kontakt.info.address_unavailable')}
                        </p>
                      )}
                    </div>
                  </div>
                </div>

                <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    {t('pages.kontakt.info.response_time_label')}
                    <span class="font-medium">{t('pages.kontakt.info.response_time')}</span>
                    {t('pages.kontakt.info.response_time_unit')}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </section>

</BaseLayout>

<script type="module">
  import { ensureCsrfToken } from '@/lib/security/csrf';

  const form = document.querySelector('form[data-contact-form]');
  const feedback = document.querySelector('[data-contact-feedback]');
  const submitButton = form?.querySelector('[data-contact-submit]');

  const getDatasetValue = (key) => (form?.dataset ? form.dataset[key] ?? '' : '');

  const setFeedback = (message, isError) => {
    if (!feedback) return;
    feedback.hidden = false;
    feedback.textContent = message;
    feedback.classList.toggle('text-red-600', Boolean(isError));
    feedback.classList.toggle('text-emerald-600', !isError);
  };

  const toStringOrEmpty = (value) => (typeof value === 'string' ? value.trim() : '');

  const resetTurnstile = () => {
    if (typeof window === 'undefined') return;
    const maybe = window.turnstile;
    if (maybe && typeof maybe.reset === 'function') {
      maybe.reset();
    }
  };

  if (form) {
    form.addEventListener('submit', async (event) => {
      event.preventDefault();

      const csrfToken = ensureCsrfToken();
      if (!csrfToken) {
        setFeedback(getDatasetValue('genericError') || 'CSRF token missing', true);
        return;
      }

      if (submitButton) {
        submitButton.setAttribute('disabled', 'true');
        submitButton.classList.add('opacity-70');
      }
      if (feedback) {
        feedback.hidden = false;
        feedback.textContent = getDatasetValue('sendingMessage');
        feedback.classList.remove('text-red-600', 'text-emerald-600');
      }

      const formData = new FormData(form);
      const payload = {
        firstName: toStringOrEmpty(formData.get('first-name')),
        lastName: toStringOrEmpty(formData.get('last-name')),
        email: toStringOrEmpty(formData.get('email')),
        subject: toStringOrEmpty(formData.get('subject')),
        message: toStringOrEmpty(formData.get('message')),
        consent: formData.get('privacy-policy') === 'on',
        locale: toStringOrEmpty(formData.get('locale')) || undefined,
        turnstileToken: toStringOrEmpty(formData.get('cf-turnstile-response')),
        source: 'kontakt-page',
      };

      try {
        const response = await fetch('/api/contact', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            Accept: 'application/json',
            'X-CSRF-Token': csrfToken,
          },
          body: JSON.stringify(payload),
        });

        const json = await response.json().catch(() => ({}));
        if (response.ok && json && json.success) {
          form.reset();
          setFeedback(getDatasetValue('successMessage'), false);
          resetTurnstile();
        } else {
          const message =
            (json?.error && json.error.message) ||
            getDatasetValue('errorMessage') ||
            getDatasetValue('genericError');
          setFeedback(message, true);
        }
      } catch (error) {
        console.error('contact_form_submit_error', error);
        setFeedback(getDatasetValue('genericError'), true);
      } finally {
        if (submitButton) {
          submitButton.removeAttribute('disabled');
          submitButton.classList.remove('opacity-70');
        }
      }
    });
  }
</script>
