---
import BaseLayout from '@/layouts/BaseLayout.astro';
import VoiceVisualizerIsland from '@/components/tools/voice-visualizer/VoiceVisualizerIsland';
import Card from '@/components/ui/Card';
---

<BaseLayout title="Voice Visualizer & Transkriptor">
  <main class="min-h-screen bg-transparent py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <Card as="div" className="p-4 sm:p-6">
        <VoiceVisualizerIsland
          client:load
          strings={{
            title: 'Voice Visualizer & Transkriptor',
            description: 'Sprache aufnehmen, Live‑Wellenform sehen und sofort transkribieren.',
            start: 'Aufnahme starten',
            stop: 'Stopp',
            usage: 'Verbrauch',
            loading: 'lädt…',
            transcript: 'Transkript',
            error: 'Ein Fehler ist aufgetreten',
            rateLimited: (s: number) => `Rate‑Limit erreicht. In ${s}s erneut…`,
          }}
          langHint="de"
        />
      </Card>
    </div>
  </main>
</BaseLayout>
