---
import BaseLayout from '@/layouts/BaseLayout.astro';
import VideoEnhancerIsland from '@/components/tools/video-enhancer/VideoEnhancerIsland';
import Card from '@/components/ui/Card';
import ToolPageHeader from '@/components/tools/shared/ToolPageHeader.astro';
---

<BaseLayout
  title="Video Enhancer – Evolution Hub"
  description="Upscale/Enhance videos with AI (Topaz)."
>
  <main class="min-h-screen bg-transparent py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <ToolPageHeader
        icon="tool"
        titleKey="pages.tools.items.video-enhancer.name"
        descriptionKey="pages.tools.items.video-enhancer.description"
        backHref="/tools"
      />
      <Card as="section" className="mt-8 p-6" variant="holo">
        <h2 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-white">
          Video‑Enhancer App
        </h2>
        <div id="video-enhancer-root" class="mt-6" aria-label="Video Enhancer root">
          <VideoEnhancerIsland client:load />
        </div>
      </Card>
    </div>
  </main>
</BaseLayout>
