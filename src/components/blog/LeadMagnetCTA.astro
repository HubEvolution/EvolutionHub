---
// Lead Magnet CTA Component - Spezialisierte Komponente für Lead-Magneten
interface Props {
  leadMagnetId: string;
  title?: string;
  description?: string;
  benefits?: string[];
  image?: string;
  fileType?: 'PDF' | 'DOCX' | 'ZIP' | 'MP4';
  fileSize?: string;
  downloadCount?: number;
  variant?: 'card' | 'inline' | 'banner';
  urgency?: boolean;
}

const {
  leadMagnetId,
  title,
  description,
  benefits = [],
  image,
  fileType = 'PDF',
  fileSize,
  downloadCount,
  variant = 'card',
  urgency = false,
} = Astro.props as Props;

// Standard Lead-Magneten
const leadMagnets = {
  'new-work-guide': {
    title: 'New Work Transformation Guide',
    description:
      'Schritt-für-Schritt Anleitung zur erfolgreichen Einführung von New Work in Ihrem Unternehmen.',
    benefits: [
      'Praxiserprobte Transformation-Roadmap',
      'Checklisten für jede Implementierungsphase',
      'Häufige Stolpersteine und wie Sie sie vermeiden',
      'Erfolgsmetriken und KPI-Dashboard',
    ],
    image: '/images/lead-magnets/new-work-guide-preview.webp',
    fileSize: '2.3 MB',
  },
  'ki-tools-checkliste': {
    title: 'KI-Tools Checkliste 2025',
    description:
      'Umfassende Liste der besten KI-Tools für verschiedene Anwendungsbereiche im Business.',
    benefits: [
      '50+ getestete KI-Tools mit Bewertungen',
      'Kategorisiert nach Anwendungsbereich',
      'Kosten-Nutzen-Analyse für jedes Tool',
      'Implementierungs-Tipps und Best Practices',
    ],
    image: '/images/lead-magnets/ki-tools-preview.webp',
    fileSize: '1.8 MB',
  },
  'produktivitaets-masterclass': {
    title: 'Produktivitäts-Masterclass',
    description:
      'Video-Serie mit den effektivsten Techniken für maximale Produktivität im Home Office.',
    benefits: [
      '5 Video-Module (insgesamt 2 Stunden)',
      'Downloadbare Arbeitsblätter',
      'Pomodoro-Timer-App inklusive',
      'Exklusive Community-Zugang',
    ],
    image: '/images/lead-magnets/produktivitaets-masterclass-preview.webp',
    fileType: 'ZIP',
    fileSize: '156 MB',
  },
};

type LeadMagnetDef = (typeof leadMagnets)[keyof typeof leadMagnets];
const leadMagnetMap = leadMagnets as Record<string, LeadMagnetDef>;
const leadMagnet = leadMagnetMap[leadMagnetId] || {
  title: title || 'Exklusives Experten-Material',
  description: description || 'Laden Sie unser kostenloses Material herunter.',
  benefits: benefits,
  image: image,
  fileSize: fileSize,
};

// Variant-spezifische Styles
const variantStyles = {
  card: 'bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 p-6',
  inline:
    'bg-gradient-to-r from-emerald-50 to-cyan-50 dark:from-gray-800 dark:to-gray-800 rounded-lg border-l-4 border-emerald-500 p-4',
  banner: 'bg-gradient-to-r from-emerald-500 to-cyan-500 text-white rounded-xl p-6 shadow-xl',
};
---

<div
  class={`lead-magnet-cta ${variantStyles[variant]} transition-all duration-300 hover:shadow-xl group my-8`}
  data-lead-magnet-id={leadMagnetId}
  data-variant={variant}
>
  {
    urgency && (
      <div class="mb-4 inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
        <svg class="w-3 h-3 mr-1 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
            clip-rule="evenodd"
          />
        </svg>
        Limitiertes Angebot
      </div>
    )
  }

  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Preview Image (falls vorhanden) -->
    {
      leadMagnet.image && (
        <div class="lg:w-1/3 flex-shrink-0">
          <div class="relative overflow-hidden rounded-lg shadow-md group-hover:shadow-lg transition-shadow duration-300">
            <img
              src={leadMagnet.image}
              alt={`Vorschau: ${leadMagnet.title}`}
              class="w-full h-48 lg:h-auto object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
          </div>
        </div>
      )
    }

    <!-- Content -->
    <div class="flex-1 space-y-4">
      <div>
        <h3
          class={`text-xl font-bold mb-2 ${variant === 'banner' ? 'text-white' : 'text-gray-900 dark:text-white'} group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors duration-200`}
        >
          {leadMagnet.title}
        </h3>
        <p
          class={`text-sm leading-relaxed ${variant === 'banner' ? 'text-white/90' : 'text-gray-600 dark:text-gray-300'}`}
        >
          {leadMagnet.description}
        </p>
      </div>

      <!-- Benefits -->
      {
        leadMagnet.benefits && leadMagnet.benefits.length > 0 && (
          <div class="space-y-2">
            <h4
              class={`text-sm font-semibold ${variant === 'banner' ? 'text-white' : 'text-gray-800 dark:text-gray-200'}`}
            >
              Das erhalten Sie:
            </h4>
            <ul class="space-y-1">
              {leadMagnet.benefits.map((benefit: string) => (
                <li
                  class={`flex items-start text-sm ${variant === 'banner' ? 'text-white/90' : 'text-gray-600 dark:text-gray-300'}`}
                >
                  <svg
                    class="w-4 h-4 mt-0.5 mr-2 flex-shrink-0 text-emerald-500"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  {benefit}
                </li>
              ))}
            </ul>
          </div>
        )
      }

      <!-- File Info & CTA -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 pt-2">
        <!-- File Info -->
        <div class="flex items-center space-x-4 text-xs">
          <div
            class={`flex items-center space-x-1 ${variant === 'banner' ? 'text-white/80' : 'text-gray-500 dark:text-gray-400'}`}
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            <span>{fileType}</span>
          </div>

          {
            leadMagnet.fileSize && (
              <div
                class={`flex items-center space-x-1 ${variant === 'banner' ? 'text-white/80' : 'text-gray-500 dark:text-gray-400'}`}
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                  />
                </svg>
                <span>{leadMagnet.fileSize}</span>
              </div>
            )
          }

          {
            downloadCount && (
              <div
                class={`flex items-center space-x-1 ${variant === 'banner' ? 'text-white/80' : 'text-gray-500 dark:text-gray-400'}`}
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                  />
                </svg>
                <span>{downloadCount}+ Downloads</span>
              </div>
            )
          }
        </div>

        <!-- Download Button -->
        <button
          class={`lead-magnet-button inline-flex items-center px-6 py-3 rounded-lg font-semibold text-sm transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 group-hover:scale-105 ${
            variant === 'banner'
              ? 'bg-white text-emerald-600 hover:bg-gray-50 focus:ring-white'
              : 'bg-gradient-to-r from-emerald-500 to-cyan-500 text-white hover:from-emerald-600 hover:to-cyan-600 focus:ring-emerald-500 shadow-md hover:shadow-lg'
          }`}
          data-lead-magnet-id={leadMagnetId}
          data-analytics-event="lead_magnet_click"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            ></path>
          </svg>
          Kostenlos herunterladen
          <svg
            class="w-4 h-4 ml-2 transition-transform duration-200 group-hover:translate-x-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  // Lead-Magnet-spezifisches Event-Tracking
  document.addEventListener('DOMContentLoaded', () => {
    const leadMagnetButtons = document.querySelectorAll('.lead-magnet-button');

    leadMagnetButtons.forEach((button) => {
      if (!(button instanceof HTMLElement)) return;
      button.addEventListener('click', (e: Event) => {
        e.preventDefault();

        const leadMagnetId = button.dataset?.leadMagnetId;

        // Analytics-Event senden
        const gtag = (window as any).gtag;
        if (typeof gtag === 'function') {
          gtag('event', 'lead_magnet_click', {
            lead_magnet_id: leadMagnetId,
            page_location: window.location.href,
            event_category: 'Lead Generation',
          });
        }

        // Console-Log für Development
        console.log('Lead Magnet clicked:', {
          id: leadMagnetId,
          url: window.location.href,
          timestamp: new Date().toISOString(),
        });

        // Redirect zur Lead-Magnet-Landing-Page
        window.location.href = `/lead-magnets/${leadMagnetId}`;
      });
    });

    // Impression-Tracking (wenn Komponente in Viewport kommt)
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const target = entry.target as any;
            const leadMagnetId = target && target.dataset ? target.dataset.leadMagnetId : undefined;

            const gtag = (window as any).gtag;
            if (typeof gtag === 'function') {
              gtag('event', 'lead_magnet_impression', {
                lead_magnet_id: leadMagnetId,
                page_location: window.location.href,
              });
            }

            // Only track once
            observer.unobserve(entry.target);
          }
        });
      },
      {
        threshold: 0.5,
        rootMargin: '0px 0px -100px 0px',
      }
    );

    document.querySelectorAll('.lead-magnet-cta').forEach((cta) => {
      observer.observe(cta);
    });
  });
</script>

<style>
  .lead-magnet-cta:hover {
    transform: translateY(-4px);
  }

  .lead-magnet-button:hover {
    transform: translateY(-1px);
  }

  @media (prefers-reduced-motion: reduce) {
    .lead-magnet-cta,
    .lead-magnet-button,
    .group-hover\:scale-105,
    .group-hover\:translate-x-1 {
      transform: none !important;
      transition: none !important;
    }

    .animate-pulse {
      animation: none !important;
    }
  }
</style>
