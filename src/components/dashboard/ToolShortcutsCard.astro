---
const { tools, strings } = Astro.props as {
  tools: Array<{ id: string; name: string; description: string; url: string }>;
  strings: {
    title: string;
    description: string;
    open: string;
  };
};
---

<div class="space-y-3">
  <h3 class="text-base font-bold text-cyan-200">{strings.title}</h3>
  <p class="text-sm text-slate-300/90">{strings.description}</p>
  <div class="space-y-2">
    {
      tools.map((tool) => (
        <div class="group flex items-start justify-between gap-3 rounded-lg border border-white/10 bg-white/5 px-3 py-2.5 backdrop-blur-sm transition-all hover:border-cyan-400/30 hover:bg-white/10">
          <div class="flex-1 min-w-0">
            <p class="truncate text-sm font-semibold text-white">{tool.name}</p>
            <p class="truncate text-xs text-slate-400">{tool.description}</p>
          </div>
          <a
            href={tool.url}
            class="inline-flex shrink-0 items-center rounded-md bg-gradient-to-r from-cyan-500 to-blue-500 px-3 py-1 text-xs font-bold text-white shadow-sm shadow-cyan-500/30 transition hover:from-cyan-600 hover:to-blue-600"
          >
            {strings.open}
          </a>
        </div>
      ))
    }
  </div>
</div>
