---
// src/components/dashboard/StatsCard.astro
import Card from '../ui/Card.astro';

interface Stats {
  projects: number;
  tasks: number;
  teamMembers: number;
}

interface Props {
  stats: Stats;
}

const { stats } = Astro.props;

const statsMap = [
  { label: 'Projects', value: stats.projects },
  { label: 'Tasks', value: stats.tasks },
  { label: 'Team Members', value: stats.teamMembers },
];
---

<Card className="p-0 overflow-hidden">
  <div class="grid grid-cols-1 md:grid-cols-3">
    {statsMap.map((stat, index) => (
      <div class:list={[
        "p-6 flex items-center",
        { "border-r border-gray-200 dark:border-white/10": index < statsMap.length - 1 && index % 3 !== 2 }
      ]}>
        <div>
          <p class="text-gray-500 dark:text-gray-400 text-sm">{stat.label}</p>
          <span class="text-2xl font-bold text-gray-800 dark:text-white">{stat.value}</span>
        </div>
      </div>
    ))}
  </div>
</Card>
