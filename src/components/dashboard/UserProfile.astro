---
import { localizePath } from '@/lib/locale-path';
import { getLocale } from '@/lib/i18n';
import { getI18n } from '@/utils/i18n';
interface Props {
  user: {
    id: string;
    email: string;
    name: string;
    username: string;
    image?: string;
    plan?: 'free' | 'pro' | 'premium' | 'enterprise';
  };
}

const { user } = Astro.props as Props;
const locale = getLocale(Astro.url.pathname);
const t = getI18n(locale);
const dashboardPath = localizePath(locale, '/dashboard');
const accountSettingsLink = `${dashboardPath}#account-settings`;

// Derive plan label and styling
const plan: 'free' | 'pro' | 'premium' | 'enterprise' = user.plan ?? 'free';
const planLabelKey = `pages.dashboard.profile.planLabels.${plan}`;
const planLabel = t(planLabelKey);
const planClasses =
  plan === 'free'
    ? 'bg-gray-100 text-gray-700 ring-1 ring-gray-200 dark:bg-gray-800 dark:text-gray-200 dark:ring-gray-700'
    : plan === 'pro'
      ? 'bg-emerald-50 text-emerald-700 ring-1 ring-emerald-200 dark:bg-emerald-900/20 dark:text-emerald-300 dark:ring-emerald-800/40'
      : plan === 'premium'
        ? 'bg-indigo-50 text-indigo-700 ring-1 ring-indigo-200 dark:bg-indigo-900/20 dark:text-indigo-300 dark:ring-indigo-800/40'
        : 'bg-amber-50 text-amber-700 ring-1 ring-amber-200 dark:bg-amber-900/20 dark:text-amber-300 dark:ring-amber-800/40';
---

<div
  class="group relative overflow-hidden rounded-xl border border-emerald-500/20 bg-gradient-to-br from-emerald-950/40 via-teal-950/30 to-cyan-950/40 p-5 shadow-xl backdrop-blur-sm transition-all hover:border-emerald-400/30 hover:shadow-emerald-500/20"
>
  <div
    class="absolute inset-0 -z-10 bg-gradient-to-br from-emerald-500/10 to-cyan-500/10 opacity-50"
  >
  </div>

  <div class="flex items-center gap-4">
    <div class="relative">
      <img
        class="h-14 w-14 rounded-full border-2 border-emerald-400/50 ring-4 ring-emerald-500/20"
        src={user.image || '/assets/svg/logo.svg'}
        alt={t('pages.dashboard.profile.avatarAlt') ?? 'User avatar'}
      />
      <div
        class="absolute -bottom-1 -right-1 h-4 w-4 rounded-full border-2 border-emerald-950 bg-emerald-400"
      >
      </div>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2">
        <h3 class="truncate text-lg font-bold text-white">{user.name}</h3>
        <span
          class={`inline-flex items-center rounded-full px-2 py-0.5 text-[10px] font-bold uppercase tracking-wider ${planClasses}`}
          title={t('pages.dashboard.profile.planTooltip', { plan: planLabel })}
        >
          {planLabel}
        </span>
      </div>
      <p class="truncate text-sm text-emerald-200/80">@{user.username}</p>
    </div>
  </div>

  <div class="mt-5">
    <h4 class="text-xs font-bold uppercase tracking-wider text-emerald-200/80">
      {t('pages.dashboard.profile.actionsTitle') ?? 'Account actions'}
    </h4>
    <div class="mt-3 space-y-2">
      <a
        href={accountSettingsLink}
        class="block w-full rounded-lg border border-white/10 bg-white/5 px-3 py-2 text-center text-sm font-medium text-emerald-100 backdrop-blur-sm transition hover:border-white/20 hover:bg-white/10"
      >
        {t('pages.dashboard.profile.settings') ?? 'Edit settings'}
      </a>
      {
        plan === 'free' && (
          (() => {
            const base = localizePath(locale, '/pricing');
            let href = base;
            try {
              const u = new URL(base, 'http://x');
              const cur = new URL(Astro.url?.href || 'http://x');
              const currentPath = `${cur.pathname}${cur.search}`;
              if (currentPath.startsWith('/')) {
                u.searchParams.set('return_to', currentPath);
                href = u.pathname + u.search;
              }
            } catch {}
            return (
              <a
                href={href}
                class="block w-full rounded-lg bg-gradient-to-r from-emerald-500 to-teal-500 px-3 py-2 text-center text-sm font-bold text-white shadow-lg shadow-emerald-500/30 transition hover:from-emerald-600 hover:to-teal-600 hover:shadow-emerald-500/50"
              >
                {t('pages.dashboard.profile.upgrade') ?? 'Upgrade'}
              </a>
            );
          })()
        )
      }
      <a
        href="/api/user/logout"
        class="block w-full rounded-lg border border-red-500/30 bg-red-500/10 px-3 py-2 text-center text-sm font-medium text-red-300 backdrop-blur-sm transition hover:border-red-400/40 hover:bg-red-500/20"
      >
        {t('pages.dashboard.profile.logout') ?? 'Sign out'}
      </a>
    </div>
  </div>
</div>
