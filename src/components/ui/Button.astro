---
import {
  BUTTON_BASE,
  BUTTON_SIZES,
  BUTTON_VARIANTS,
  type ButtonSize,
  type ButtonVariant,
} from './buttonStyles';

interface Props {
  variant?: ButtonVariant;
  size?: ButtonSize;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  fullWidth?: boolean;
  className?: string;
}

const {
  variant = 'primary',
  size = 'md',
  type = 'button',
  disabled = false,
  fullWidth = false,
  className = '',
  ...rest
} = Astro.props as Props;

const widthClass = fullWidth ? 'w-full' : '';
const disabledClass = disabled ? 'opacity-50 cursor-not-allowed' : 'cursor-pointer';

const buttonClasses = [
  BUTTON_BASE,
  BUTTON_VARIANTS[variant],
  BUTTON_SIZES[size],
  widthClass,
  disabledClass,
  className,
]
  .filter(Boolean)
  .join(' ');
---

<button type={type} class={buttonClasses} disabled={disabled} {...rest}>
  <slot />
</button>

<style>
  /* Ensure visual disabled state also applies when disabled/aria-disabled is set at runtime */
  button[disabled],
  button[aria-disabled='true'] {
    opacity: 0.6;
    cursor: not-allowed;
    pointer-events: none;
    /* Override gradient to ensure clear disabled appearance */
    background-image: none !important;
    background-color: rgb(156 163 175 / 1) !important; /* tailwind gray-400 */
    color: white !important;
  }
</style>
