---
// src/components/ui/Card.astro

interface Props {
  title?: string;
  className?: string;
  children?: any;
}

const { title, className = '', children } = Astro.props;
---

<div class={`relative p-6 rounded-2xl overflow-hidden ${className}`}>
  <!-- Glassmorphism background -->
  <div class="absolute inset-0 bg-white/10 backdrop-blur-lg border border-white/10 rounded-2xl -z-10"></div>
  
  <!-- Optional title -->
  {title && (
    <h3 class="text-lg font-semibold text-white mb-4">
      {title}
    </h3>
  )}
  
  <!-- Content -->
  <div class="relative">
    <slot>
      {children}
    </slot>
  </div>
</div>

<style>
  /* Add subtle glow effect on hover */
  .card {
    transition: box-shadow 0.3s ease, transform 0.2s ease;
  }
  
  .card:hover {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }
</style>
