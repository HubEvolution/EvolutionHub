---
import type { I18nFn } from '@/utils/i18n';

type Props = {
  t: I18nFn;
};

const { t } = Astro.props as Props;
---

<!-- INPUT â†’ OUTPUT PROOF -->
<section class="container mx-auto px-4 py-8 md:py-10">
  <div
    class="mx-auto max-w-5xl border border-[rgba(var(--lp-page-border)/0.65)] rounded-2xl overflow-hidden bg-[rgba(var(--lp-page-surface)/0.72)]"
  >
    <div class="grid md:grid-cols-[1fr_2fr]">
      <div
        class="px-5 py-4 md:px-6 md:py-5 border-b md:border-b-0 md:border-r border-[rgba(var(--lp-page-border)/0.65)]"
      >
        <div class="text-xs font-semibold tracking-wide text-[rgb(var(--lp-page-muted))]">
          {t('pages.home.proof.input_label')}
        </div>
        <div
          class="mt-2 overflow-x-auto whitespace-nowrap font-mono text-sm md:text-[15px] text-[rgb(var(--lp-page-fg))]"
        >
          {t('pages.home.proof.input_value')}
        </div>
      </div>
      <div class="px-5 py-4 md:px-6 md:py-5">
        <div class="flex items-center justify-between gap-3">
          <div class="text-xs font-semibold tracking-wide text-[rgb(var(--lp-page-muted))]">
            {t('pages.home.proof.output_label')}
          </div>
          <div class="h-px flex-1 bg-[rgba(var(--lp-accent)/0.35)]" aria-hidden="true"></div>
        </div>
        <pre
          class="mt-2 font-mono text-sm md:text-[15px] leading-relaxed text-[rgb(var(--lp-page-fg))] whitespace-pre-wrap"
        >
          {t('pages.home.proof.output_value')}
        </pre>
      </div>
    </div>
  </div>
</section>
