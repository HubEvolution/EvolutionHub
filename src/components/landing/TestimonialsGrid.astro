---
import TestimonialCard from '@/components/landing/TestimonialCard.astro';

interface Item {
  quote: string;
  author: string;
  role?: string;
}
interface Props {
  items: Item[];
  class?: string;
}
const { items = [], class: className = '' } = Astro.props as Props;
---

<div
  class={`grid gap-6 md:gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 ${className}`}
>
  {
    items.map((it) => (
      <TestimonialCard
        quote={it.quote}
        author={it.author}
        role={it.role}
        class="h-full hover:shadow-xl transition-transform duration-300 will-change-transform"
      />
    ))
  }
</div>
