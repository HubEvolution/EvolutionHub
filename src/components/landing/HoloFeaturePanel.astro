---
import Icon from '@/components/ui/Icon.astro';
import LottieIcon from '@/components/landing/LottieIcon';
interface Props {
  iconName: string;
  title: string;
  description: string;
  lottieSrc?: string;
}
const { iconName, title, description, lottieSrc } = Astro.props as Props;
---

<div
  class="relative isolate text-center p-6 rounded-2xl landing-holo-panel border border-white/10 bg-white/10 dark:bg-white/5 backdrop-blur-xl transition duration-300 will-change-transform hover:-translate-y-0.5"
>
  <div class="absolute inset-0 rounded-2xl pointer-events-none landing-holo-bg"></div>
  <div class="relative">
    <div
      class="mb-4 inline-flex items-center justify-center w-14 h-14 rounded-xl bg-white/5 border border-white/10"
    >
      <div class="landing-panel-pulse">
        {
          lottieSrc ? (
            <LottieIcon client:load src={lottieSrc} className="w-8 h-8" ariaLabel={title} />
          ) : (
            <Icon name={iconName} class="w-8 h-8 text-emerald-400" ariaLabel={title} />
          )
        }
      </div>
    </div>
    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">{title}</h3>
    <p class="text-gray-700 dark:text-gray-300">{description}</p>
  </div>
</div>
