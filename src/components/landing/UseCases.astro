---
import type { I18nFn } from '@/utils/i18n';

type Props = {
  t: I18nFn;
};

const { t } = Astro.props as Props;
---

<!-- Use cases -->
<section class="container mx-auto px-4 pb-12 md:pb-14">
  <div class="mx-auto max-w-5xl border-t border-[rgba(var(--lp-page-border)/0.65)] pt-8">
    <h2 class="text-base sm:text-lg font-semibold text-[rgb(var(--lp-page-fg))]">
      {t('pages.home.use_cases.heading')}
    </h2>
    <ul class="mt-5 grid gap-6 md:grid-cols-3">
      <li class="flex gap-3">
        <span
          class="mt-2 inline-flex h-2.5 w-2.5 rounded-full bg-[rgb(var(--lp-accent))]"
          aria-hidden="true"></span>
        <div>
          <div class="text-sm font-semibold text-[rgb(var(--lp-page-fg))]">
            {t('pages.home.use_cases.case1.title')}
          </div>
          <div class="mt-1 text-sm text-[rgb(var(--lp-page-muted))]">
            {t('pages.home.use_cases.case1.example')}
          </div>
        </div>
      </li>
      <li class="flex gap-3">
        <span
          class="mt-2 inline-flex h-2.5 w-2.5 rounded-full bg-[rgb(var(--lp-accent))]"
          aria-hidden="true"></span>
        <div>
          <div class="text-sm font-semibold text-[rgb(var(--lp-page-fg))]">
            {t('pages.home.use_cases.case2.title')}
          </div>
          <div class="mt-1 text-sm text-[rgb(var(--lp-page-muted))]">
            {t('pages.home.use_cases.case2.example')}
          </div>
        </div>
      </li>
      <li class="flex gap-3">
        <span
          class="mt-2 inline-flex h-2.5 w-2.5 rounded-full bg-[rgb(var(--lp-accent))]"
          aria-hidden="true"></span>
        <div>
          <div class="text-sm font-semibold text-[rgb(var(--lp-page-fg))]">
            {t('pages.home.use_cases.case3.title')}
          </div>
          <div class="mt-1 text-sm text-[rgb(var(--lp-page-muted))]">
            {t('pages.home.use_cases.case3.example')}
          </div>
        </div>
      </li>
    </ul>
  </div>
</section>
