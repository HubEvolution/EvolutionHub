---
// Footer Component with modern design
import Newsletter from './Newsletter.astro';
import { type Locale } from '@/lib/i18n';
import { localizePath } from '@/lib/locale-path';

interface Props {
  hideNewsletter?: boolean;
  locale?: Locale;
}

const { hideNewsletter = false, locale = 'de' as Locale } = Astro.props;

const cookieSlug: Record<Locale, string> = {
  de: 'cookie-einstellungen',
  en: 'cookie-settings',
};

---

<footer
  class="relative bg-white dark:bg-gray-900 border-t border-gray-100 dark:border-gray-800"
>
  <!-- Decorative elements -->
  <div class="absolute inset-0 overflow-hidden z-0">
    <div
      class="absolute inset-0 bg-gradient-to-br from-emerald-50/50 to-cyan-50/50 dark:from-gray-800/50 dark:to-gray-900/50"
      aria-hidden="true"
    >
    </div>
    <div
      class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-30 dark:opacity-10"
    >
    </div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 z-10">
    <!-- Main Footer Content - 4 Columns -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Brand & Description -->
      <div class="space-y-4">
        <div class="flex items-center space-x-3">
          <div
            class="w-10 h-10 rounded-lg bg-gradient-to-br from-emerald-500 to-cyan-500 flex items-center justify-center"
          >
            <span class="text-white font-bold text-lg">E</span>
          </div>
          <span
            class="text-xl font-bold bg-gradient-to-r from-emerald-600 to-cyan-500 bg-clip-text text-transparent"
          >
            Evolution Hub
          </span>
        </div>
        <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed">
          Die moderne Plattform für Entwickler, um Projekte zu verwalten, zu
          teilen und zu skalieren. Entwickelt von Entwicklern für Entwickler.
        </p>

        <!-- Social Links -->
        <div class="flex space-x-4 pt-2">
          <a
            href="#"
            class="text-gray-400 hover:text-emerald-500 dark:hover:text-emerald-400 transition-colors duration-300"
            aria-label="GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.699 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
          <a
            href="https://x.com/hub_evolution?s=21"
            class="text-gray-400 hover:text-emerald-500 dark:hover:text-emerald-400 transition-colors duration-300"
            aria-label="Twitter"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
              ></path>
            </svg>
          </a>
          <a
            href="#"
            class="text-gray-400 hover:text-emerald-500 dark:hover:text-emerald-400 transition-colors duration-300"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3
          class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4"
        >
          Schnellzugriff
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href={localizePath(locale, '/dashboard')}
              class="flex items-center text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 transition-colors duration-300 group"
            >
              <svg
                class="w-4 h-4 mr-2 text-emerald-500 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                ></path>
              </svg>
              <span
                class="group-hover:translate-x-1 transition-transform duration-300"
                >Dashboard</span
              >
            </a>
          </li>
          <li>
            <a
              href={localizePath(locale, '/blog')}
              class="flex items-center text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 transition-colors duration-300 group"
            >
              <svg
                class="w-4 h-4 mr-2 text-emerald-500 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                ></path>
              </svg>
              <span
                class="group-hover:translate-x-1 transition-transform duration-500"
                >Blog</span
              >
            </a>
          </li>
          <!-- removed: Projekte link (page not available) -->
          <li>
            <a
              href={localizePath(locale, '/docs')}
              class="flex items-center text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 transition-colors duration-300 group"
            >
              <svg
                class="w-4 h-4 mr-2 text-emerald-500 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              <span
                class="group-hover:translate-x-1 transition-transform duration-300"
                >Dokumentation</span
              >
            </a>
          </li>
          <li>
            <a
              href={localizePath(locale, '/faq')}
              class="flex items-center text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 transition-colors duration-300 group"
            >
              <svg
                class="w-4 h-4 mr-2 text-emerald-500 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 10a4 4 0 118 0c0 2-2 3-4 3m0 4h.01"
                ></path>
              </svg>
              <span
                class="group-hover:translate-x-1 transition-transform duration-300"
                >FAQ</span
              >
            </a>
          </li>
          <li>
            <a
              href={localizePath(locale, '/kontakt')}
              class="flex items-center text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 transition-colors duration-300 group"
            >
              <svg
                class="w-4 h-4 mr-2 text-emerald-500 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <span
                class="group-hover:translate-x-1 transition-transform duration-300"
                >Kontakt</span
              >
            </a>
          </li>
        </ul>
      </div>

      <!-- Ressourcen section removed (pages not available) -->

      <!-- Rechtliches -->
      <div>
        <h3
          class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4"
        >
          Rechtliches
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href={localizePath(locale, '/datenschutz')}
              class="flex items-center text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 transition-colors duration-300 group"
            >
              <svg
                class="w-4 h-4 mr-2 text-emerald-500 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                ></path>
              </svg>
              <span
                class="group-hover:translate-x-1 transition-transform duration-300"
                >Datenschutzerklärung</span
              >
            </a>
          </li>
          <li>
            <a
              href={localizePath(locale, '/impressum')}
              class="flex items-center text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 transition-colors duration-300 group"
            >
              <svg
                class="w-4 h-4 mr-2 text-emerald-500 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                ></path>
              </svg>
              <span
                class="group-hover:translate-x-1 transition-transform duration-300"
                >Impressum</span
              >
            </a>
          </li>
          <li>
            <a
              href={localizePath(locale, '/agb')}
              class="flex items-center text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 transition-colors duration-300 group"
            >
              <svg
                class="w-4 h-4 mr-2 text-emerald-500 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span
                class="group-hover:translate-x-1 transition-transform duration-300"
                >AGB</span
              >
            </a>
          </li>
          <li>
            <a
              href={localizePath(locale, `/${cookieSlug[locale]}`)}
              class="flex items-center text-gray-600 hover:text-emerald-500 dark:text-gray-300 dark:hover:text-emerald-400 transition-colors duration-300 group"
            >
              <svg
                class="w-4 h-4 mr-2 text-emerald-500 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span
                class="group-hover:translate-x-1 transition-transform duration-300"
                >Cookie-Einstellungen</span
              >
            </a>
          </li>
        </ul>
      </div>
    </div>

    {!hideNewsletter && <Newsletter />}

    <!-- Copyright Bar -->
    <div class="border-t border-gray-200 dark:border-gray-700 mt-12 pt-8 text-center">
      <p class="text-sm text-gray-500 dark:text-gray-400">
        &copy; 2025 Evolution Hub. Alle Rechte vorbehalten.
      </p>
    </div>
  </div>
</footer>
