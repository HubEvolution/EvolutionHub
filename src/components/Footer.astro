    </div>

    {!hideNewsletter && <Newsletter />}

    <!-- Copyright Bar -->
    <div class="border-t border-gray-200 dark:border-gray-700 mt-6 pt-4 text-center">
      <p class="text-sm text-gray-500 dark:text-gray-400">{t('footer.copyright')}</p>
    </div>
  </div>
</footer>
