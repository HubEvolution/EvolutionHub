---
interface Props {
  name: string;
  description: string;
  icon: string;
  color: string;
  url: string;
  isNew?: boolean;
  isPopular?: boolean;
}

const { name, description, icon, color, url, isNew = false, isPopular = false } = Astro.props;
---

<article class="group relative bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
  {/* Badges */}
  <div class="absolute top-4 right-4 flex space-x-2">
    {isNew && (
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
        New
      </span>
    )}
    {isPopular && (
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">
        Popular
      </span>
    )}
  </div>
  
  <div class="p-6">
    <div class={`${color} w-12 h-12 rounded-lg flex items-center justify-center text-2xl mb-4`}>
      {icon}
    </div>
    
    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
      <a href={url} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
        {name}
        <span class="absolute inset-0" aria-hidden="true"></span>
      </a>
    </h3>
    
    <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed mb-4">
      {description}
    </p>
    
    <div class="flex items-center text-sm text-blue-600 dark:text-blue-400 font-medium">
      Mehr erfahren
      <svg class="ml-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </div>
  </div>
  
  {/* Hover effect */}
  <div class="absolute inset-0 border-2 border-transparent group-hover:border-blue-500 dark:group-hover:border-blue-400 rounded-xl transition-all duration-300 pointer-events-none"></div>
</article>
