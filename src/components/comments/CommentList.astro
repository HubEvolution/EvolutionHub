---
// evolution-hub/frontend/src/components/comments/CommentList.astro
interface Comment {
  id: string;
  postId: string;
  author: string;
  content: string;
  createdAt: string;
}

interface Props {
  comments: Comment[];
}

const { comments } = Astro.props;
---

<div id="comment-list" class="mt-8 space-y-4">
  {comments.length > 0 ? (
    comments.map(comment => (
      <div class="p-4 bg-gray-100 dark:bg-gray-800 rounded-lg">
        <p class="font-semibold">{comment.author}</p>
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
          {new Date(comment.createdAt).toLocaleDateString('de-DE', { year: 'numeric', month: 'long', day: 'numeric' })}
        </p>
        <p>{comment.content}</p>
      </div>
    ))
  ) : (
    <p>Noch keine Kommentare vorhanden. Sei der Erste!</p>
  )}
</div>