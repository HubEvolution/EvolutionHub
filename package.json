{
  "$schema": "https://json.schemastore.org/package",
  "name": "evolution-hub",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "npm run dev:worker",
    "dev:worker": "npm run build:worker && wrangler dev",
    "dev:astro": "astro dev",
    "dev:pages-fallback": "npm run build:worker && cp -r ./dist/_worker.js/assets ./dist/ && wrangler pages dev ./dist --d1=DB --r2=R2_AVATARS --kv=SESSION",
    "setup:local": "tsx ./scripts/setup-local-dev.ts",
    "menu": "tsx ./scripts/dev-menu.ts",
    "onboarding": "tsx ./scripts/onboarding.ts",
    "build": "astro build",
    "build:worker": "ASTRO_DEPLOY_TARGET=worker astro build && node -e \"const fs=require('fs'); fs.mkdirSync('dist',{recursive:true}); fs.writeFileSync('dist/.assetsignore','_worker.js\\n'); if (fs.existsSync('dist/_worker.js/assets')) { fs.mkdirSync('dist/assets',{recursive:true}); fs.cpSync('dist/_worker.js/assets','dist/assets',{recursive:true}); }\"",
    "build:watch": "astro build --watch",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:once": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "test:e2e:report": "playwright show-report test-results",
    "lint": "eslint 'src/**/*.{ts,astro}' --max-warnings=0",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:setup": "npm run setup:local",
    "i18n:diff": "node scripts/i18n-diff.mjs",
    "i18n:fix-de-faq": "node scripts/fix-de-faq-structure.mjs"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@contentful/rich-text-from-markdown": "^16.1.1",
    "@contentful/rich-text-html-renderer": "^17.1.0",
    "@types/bcrypt": "^6.0.0",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^10.0.0",
    "astro": "^5.13.0",
    "astro-heroicons": "^2.1.5-1",
    "astro-i18n": "^2.2.4",
    "bcrypt": "^6.0.0",
    "bcrypt-ts": "^7.1.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.5.0",
    "contentful": "^11.7.15",
    "contentful-management": "^11.54.4",
    "cookie": "^1.0.2",
    "cookieconsent": "^3.1.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "globby": "^14.1.0",
    "gray-matter": "^4.0.3",
    "hono": "^4.9.1",
    "jose": "^6.0.12",
    "lottie-web": "^5.13.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "redis": "^5.8.1",
    "resend": "^6.0.1",
    "sqlite3": "^5.1.7",
    "sonner": "^2.0.7",
    "stripe": "^18.4.0",
    "uuid": "^11.1.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@astrojs/cloudflare": "^12.6.3",
    "@astrojs/tailwind": "^6.0.2",
    "@mswjs/data": "^0.16.2",
    "@mswjs/interceptors": "^0.39.6",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cookie": "^1.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "jsdom": "^26.1.0",
    "msw": "^2.10.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4",
    "wrangler": "^4.30.0"
  }
}
