{
  "$schema": "https://json.schemastore.org/package",
  "name": "evolution-hub",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "npm run dev:worker",
    "dev:e2e": "npm run db:setup && npm run dev:worker:dev",
    "dev:worker": "npm run build:worker:dev && wrangler dev dist/_worker.js/index.js --port 8787 --config wrangler.toml --compatibility-date 2025-07-26 --compatibility-flags nodejs_compat",
    "dev:worker:dev": "npm run build:worker:dev && wrangler dev dist/_worker.js/index.js --env development --port 8787 --config wrangler.toml --compatibility-date 2025-07-26 --compatibility-flags nodejs_compat",
    "dev:worker:nobuild": "wrangler dev dist/_worker.js/index.js --port 8787 --config wrangler.toml --compatibility-date 2025-07-26 --compatibility-flags nodejs_compat",
    "dev:open": "npm run build:worker:dev && ( (until curl -sSf http://127.0.0.1:8787 >/dev/null 2>&1; do sleep 0.5; done; open http://127.0.0.1:8787) & ) && wrangler dev dist/_worker.js/index.js --env development --port 8787 --config wrangler.toml --compatibility-date 2025-07-26 --compatibility-flags nodejs_compat",
    "dev:astro": "astro dev",
    "dev:pages-fallback": "npm run build:worker:dev && cp -r ./dist/_worker.js/assets ./dist/ && wrangler pages dev ./dist --d1=DB --r2=R2_AVATARS --kv=SESSION",
    "setup:local": "TS_NODE_TRANSPILE_ONLY=1 node --loader ts-node/esm ./scripts/setup-local-dev.ts",
    "menu": "tsx ./scripts/dev-menu.ts",
    "onboarding": "tsx ./scripts/onboarding.ts",
    "build": "astro build",
    "build:types": "tsc --emitDeclarationOnly --declarationDir .types --project tsconfig.json",
    "build:worker": "ASTRO_DEPLOY_TARGET=worker astro build && node -e \"const fs=require('fs'); fs.mkdirSync('dist',{recursive:true}); fs.writeFileSync('dist/.assetsignore','_worker.js\\n'); if (fs.existsSync('dist/_worker.js/assets')) { fs.mkdirSync('dist/assets',{recursive:true}); fs.cpSync('dist/_worker.js/assets','dist/assets',{recursive:true}); }\"",
    "build:worker:dev": "ASTRO_DEPLOY_TARGET=worker astro build --mode development && node -e \"const fs=require('fs'); fs.mkdirSync('dist',{recursive:true}); fs.writeFileSync('dist/.assetsignore','_worker.js\\n'); if (fs.existsSync('dist/_worker.js/assets')) { fs.mkdirSync('dist/assets',{recursive:true}); fs.cpSync('dist/_worker.js/assets','dist/assets',{recursive:true}); }\"",
    "build:worker:staging": "ASTRO_DEPLOY_TARGET=worker astro build --mode staging && node -e \"const fs=require('fs'); fs.mkdirSync('dist',{recursive:true}); fs.writeFileSync('dist/.assetsignore','_worker.js\\n'); if (fs.existsSync('dist/_worker.js/assets')) { fs.mkdirSync('dist/assets',{recursive:true}); fs.cpSync('dist/_worker.js/assets','dist/assets',{recursive:true}); }\"",
    "build:worker:ci": "WRANGLER_CONFIG=wrangler.ci.toml ASTRO_DEPLOY_TARGET=worker astro build && node -e \"const fs=require('fs'); fs.mkdirSync('dist',{recursive:true}); fs.writeFileSync('dist/.assetsignore','_worker.js\\n'); if (fs.existsSync('dist/_worker.js/assets')) { fs.mkdirSync('dist/assets',{recursive:true}); fs.cpSync('dist/_worker.js/assets','dist/assets',{recursive:true}); }\"",
    "build:watch": "astro build --watch",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest -c vitest.config.ts",
    "test:once": "vitest run -c vitest.config.ts",
    "test:watch": "vitest watch -c vitest.config.ts",
    "test:coverage": "vitest run -c vitest.config.ts --coverage",
    "test:unit": "vitest -c vitest.config.ts tests/unit",
    "test:unit:run": "vitest run -c vitest.config.ts tests/unit",
    "test:integration": "vitest -c vitest.config.ts --project=integration",
    "test:integration:run": "vitest run -c vitest.config.ts --project=integration",
    "test:e2e": "playwright test -c test-suite-v2/playwright.config.ts",
    "test:e2e:v2": "playwright test -c test-suite-v2/playwright.config.ts",
    "test:e2e:v1": "playwright test -c playwright.config.ts",
    "test:e2e:v1:splash": "playwright test -c playwright.config.ts tests/e2e/specs/splash-middleware.spec.ts",
    "test:e2e:ui": "playwright test -c test-suite-v2/playwright.config.ts --ui",
    "test:e2e:chromium": "playwright test -c test-suite-v2/playwright.config.ts --project=chromium",
    "test:e2e:firefox": "playwright test -c test-suite-v2/playwright.config.ts --project=firefox",
    "test:e2e:webkit": "playwright test -c test-suite-v2/playwright.config.ts --project=webkit",
    "test:e2e:mobile": "playwright test -c test-suite-v2/playwright.config.ts --project='Mobile Chrome' --project='Mobile Safari'",
    "test:e2e:update-snapshots": "playwright test -c test-suite-v2/playwright.config.ts --update-snapshots",
    "test:e2e:report": "playwright show-report test-suite-v2/reports/playwright-html-report",
    "lint": "eslint 'src/**/*.{ts,astro}' --max-warnings=280",
    "lint:md": "markdownlint-cli2 \"docs/**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"docs/**/*.md\"",
    "openapi:validate": "npx swagger-cli validate openapi.yaml",
    "openapi:redoc": "npx @redocly/cli build-docs openapi.yaml -o api-docs.html",
    "openapi:zod:pilot": "tsx scripts/zod-openapi-pilot.ts",
    "openapi:zod:diff": "tsx scripts/zod-openapi-diff.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:src": "tsc -p tsconfig.src.json --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:setup": "npm run setup:local",
    "i18n:diff": "node scripts/i18n-diff.mjs",
    "i18n:fix-de-faq": "node scripts/fix-de-faq-structure.mjs",
    "i18n:identical": "node scripts/i18n-identical.mjs",
    "i18n:fill": "node scripts/i18n-fill-missing.mjs",
    "i18n:report": "node scripts/i18n-empty-report.mjs",
    "i18n:validate": "node scripts/i18n-validate.mjs",
    "i18n:audit": "npm run i18n:report && npm run i18n:validate && npm run i18n:diff",
    "i18n:migrate": "node scripts/i18n-migrate-paths.mjs",
    "i18n:prune": "node scripts/i18n-prune-unused.mjs",
    "tail:staging": "wrangler tail --env staging --format=pretty",
    "tail:prod": "wrangler tail --env production --format=pretty",
    "secrets:dev": "wrangler secret put STYTCH_PROJECT_ID --env development && wrangler secret put STYTCH_SECRET --env development",
    "format": "prettier --write \"src/**/*.{ts,tsx,astro,json,md}\" \"tests/**/*.{ts,tsx}\" \"scripts/**/*.{ts,js,mjs}\" \"*.{json,md,yaml,yml}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,astro,json,md}\" \"tests/**/*.{ts,tsx}\" \"scripts/**/*.{ts,js,mjs}\" \"*.{json,md,yaml,yml}\"",
    "docs:clean": "rimraf docs/reference/api docs/reference/ts api-report temp .types dist/types",
    "docs:ref:types": "node ./scripts/ae-run.mjs",
    "docs:ref:openapi": "node ./scripts/gen-openapi.mjs",
    "docs:ref:env": "node ./scripts/gen-env-doc.mjs",
    "docs:toc": "doctoc docs --update-only --notitle",
    "docs:lint": "markdownlint \"docs/**/*.md\"",
    "docs:links": "node ./scripts/doc-links.mjs",
    "docs:inventory": "node ./scripts/doc-inventory.mjs",
    "brand:wordmark:gen": "tsx ./scripts/generate-wordmark-outlined.ts",
    "rules:update": "node scripts/dev/update-windsurf-rules.mjs",
    "rules:coverage": "node scripts/dev/gen-cascade-rules-coverage.mjs",
    "mem:index": "node scripts/dev/gen-memory-index.mjs",
    "mem:audit": "node scripts/dev/memory-audit.mjs",
    "blog:images:audit": "tsx ./scripts/blog-images-audit.ts",
    "blog:images:generate": "tsx ./scripts/blog-images-generate.ts",
    "docs:build": "run-s docs:clean docs:ref:types docs:ref:openapi docs:ref:env docs:toc docs:lint docs:links docs:inventory",
    "health-check": "tsx scripts/health-check.ts",
    "security:scan": "node ./scripts/security/scan-secrets.mjs",
    "deploy": "tsx scripts/deploy.ts",
    "deploy:production": "tsx scripts/deploy.ts --env production --url https://hub-evolution.com",
    "deploy:staging": "tsx scripts/deploy.ts --env staging --url https://staging.hub-evolution.com",
    "deploy:testing": "tsx scripts/deploy.ts --env testing --url https://ci.hub-evolution.com",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^4.3.0",
    "@contentful/rich-text-from-markdown": "^16.1.1",
    "@contentful/rich-text-html-renderer": "^17.1.0",
    "@genkit-ai/mcp": "^1.21.0",
    "@types/bcrypt": "^6.0.0",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^10.0.0",
    "astro": "^5.13.0",
    "astro-heroicons": "^2.1.5-1",
    "astro-i18n": "^2.2.4",
    "bcrypt": "^6.0.0",
    "bcrypt-ts": "^7.1.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.5.0",
    "cheerio": "^1.1.2",
    "contentful": "^11.7.15",
    "contentful-management": "^11.54.4",
    "cookie": "^1.0.2",
    "cookieconsent": "^3.1.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "globby": "^14.1.0",
    "gray-matter": "^4.0.3",
    "hono": "^4.9.1",
    "hono-rate-limiter": "^0.4.2",
    "isomorphic-dompurify": "^2.28.0",
    "jose": "^6.0.12",
    "lottie-web": "^5.13.0",
    "openai": "^5.20.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "redis": "^5.8.1",
    "resend": "^6.0.1",
    "sonner": "^2.0.7",
    "sqlite3": "^5.1.7",
    "stripe": "^18.4.0",
    "uuid": "^11.1.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@astrojs/cloudflare": "^12.6.3",
    "@astrojs/tailwind": "^6.0.2",
    "@cloudflare/workers-types": "^4.20250919.0",
    "@microsoft/api-documenter": "^7.26.4",
    "@microsoft/api-extractor": "^7.47.6",
    "@mswjs/data": "^0.16.2",
    "@mswjs/interceptors": "^0.39.6",
    "@playwright/test": "^1.54.2",
    "@redocly/cli": "^1.27.2",
    "@asteasolutions/zod-to-openapi": "^7.1.0",
    "yaml": "^2.6.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cheerio": "^0.22.35",
    "@types/cookie": "^1.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "8.38.0",
    "@typescript-eslint/parser": "8.38.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@whatwg-node/fetch": "^0.10.11",
    "autoprefixer": "^10.4.21",
    "doctoc": "^2.2.1",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^6.1.1",
    "execa": "^8.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^15.3.0",
    "markdownlint-cli": "^0.40.0",
    "markdownlint-cli2": "^0.18.1",
    "msw": "^2.10.5",
    "npm-run-all": "^4.1.5",
    "opentype.js": "^1.3.4",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.13.0",
    "rimraf": "^5.0.10",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.38.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.2"
  }
}
