{
  "codex": {
    "file": "AGENTS.md",
    "ownership": "mixed",
    "section_order": [
      "Intro",
      "Capabilities",
      "Constraints",
      "Active Entry Points",
      "SOTA Rules",
      "Known Limitations",
      "Sync (auto)"
    ],
    "style": {
      "maxLineChars": 100,
      "bulletPrefix": "- ",
      "mustHaveAnchors": ["# Intro", "## Sync (auto)"],
      "forbid": ["TODO:", "WIP:", "〈secret〉"]
    },
    "syncBlockFence": "sync:codex",
    "contentSpec": {
      "entryPoints": "list of relative file paths from codemap",
      "rulesLinks": "list of .windsurf/rules/<feature>.md anchors",
      "docsRefs": "list of docs/** or ADR/** relevant to those entry points",
      "deltaMode": true
    }
  },
  "claude": {
    "file": "CLAUDE.md",
    "ownership": "mixed",
    "section_order": [
      "Intro",
      "Design Rationale",
      "Interaction Patterns",
      "Error Handling",
      "Known Edge Cases",
      "Sync (auto)"
    ],
    "style": {
      "maxLineChars": 100,
      "bulletPrefix": "- ",
      "mustHaveAnchors": ["# Intro", "## Sync (auto)"],
      "allowExplainers": true,
      "forbid": ["TODO:", "WIP:", "〈secret〉"]
    },
    "syncBlockFence": "sync:claude",
    "contentSpec": {
      "rationales": "brief 1–3 line explanations per changed area",
      "doDont": "short Do/Don't bullets for changed modules",
      "deltaMode": true
    }
  },
  "kilocode": {
    "glob": ".kilocode/**/*.md",
    "ownership": "agent",
    "section_order": ["Contract", "Paths", "Naming", "Sync (auto)"],
    "style": {
      "maxLineChars": 100,
      "bulletPrefix": "- ",
      "mustHaveAnchors": ["## Sync (auto)"],
      "forbid": ["〈secret〉"]
    },
    "syncBlockFencePrefix": "sync:kilocode:",
    "contentSpec": {
      "contract": "function/class signatures or interface names touched",
      "paths": "module paths changed",
      "naming": "renames and casing conventions",
      "deltaMode": true
    }
  }
}
