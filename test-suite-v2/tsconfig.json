{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "vitest/globals", "@playwright/test"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/config/*": ["config/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/fixtures/*": ["fixtures/*"],
      "@/data/*": ["data/*"]
    }
  },
  "include": [
    "src/**/*",
    "config/**/*",
    "types/**/*",
    "utils/**/*",
    "fixtures/**/*",
    "data/**/*",
    "scripts/**/*"
  ],
  "exclude": ["node_modules", "dist", "coverage", "reports", "**/*.test.ts", "**/*.spec.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
