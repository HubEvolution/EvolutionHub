---
import BaseLayout from '@/layouts/BaseLayout.astro';
import VoiceVisualizerIsland from '@/components/tools/voice-visualizer/VoiceVisualizerIsland';
import Card from '@/components/ui/Card';
import ToolPageHeader from '@/components/tools/shared/ToolPageHeader.astro';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: 'Voice Visualizer & Transcriptor',
  description:
    'Record audio, visualize live waveforms, and receive instant AI-powered transcriptions directly in the browser.',
  applicationCategory: 'UtilityApplication',
  operatingSystem: 'Web',
  url: new URL(Astro.url.pathname, Astro.url.origin).toString(),
  offers: [
    {
      '@type': 'Offer',
      name: 'Starter Plan',
      price: '0',
      priceCurrency: 'EUR',
      availability: 'https://schema.org/InStock',
      description: 'Free tier with limited daily usage.',
    },
    {
      '@type': 'Offer',
      name: 'Pro Plan',
      price: '12',
      priceCurrency: 'EUR',
      availability: 'https://schema.org/InStock',
      description: 'Monthly subscription with higher quotas.',
    },
    {
      '@type': 'Offer',
      name: 'Business Plan',
      price: '28',
      priceCurrency: 'EUR',
      availability: 'https://schema.org/InStock',
      description: 'Advanced limits for teams and businesses.',
    },
  ],
};
---

<BaseLayout title="Voice Visualizer & Transkriptor" structuredData={structuredData}>
  <main class="min-h-screen bg-transparent py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <ToolPageHeader
        icon="microphone"
        titleKey="pages.tools.items.voice-visualizer.name"
        descriptionKey="pages.tools.items.voice-visualizer.description"
        backHref="/tools"
      />
      <Card as="div" className="p-4 sm:p-6">
        <VoiceVisualizerIsland
          client:load
          strings={{
            title: 'Voice Visualizer & Transkriptor',
            description: 'Sprache aufnehmen, Live‑Wellenform sehen und sofort transkribieren.',
            start: 'Aufnahme starten',
            stop: 'Stopp',
            usage: 'Verbrauch',
            loading: 'lädt…',
            transcript: 'Transkript',
            error: 'Ein Fehler ist aufgetreten',
            rateLimited: (s: number) => `Rate‑Limit erreicht. In ${s}s erneut…`,
          }}
          langHint="de"
        />
      </Card>
    </div>
  </main>
</BaseLayout>
