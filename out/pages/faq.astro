---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getI18n } from '@/utils/i18n';
import { getLocale } from '@/lib/i18n';
import deTranslations from '../locales/de.json';
import enTranslations from '../locales/en.json';
import Icon from '@/components/ui/Icon.astro';
import Card from '@/components/ui/Card';
import ContactTeaser from '@/components/tools/faq/ContactTeaser.astro';

// Icons als SVG-Strings, um Abh√§ngigkeiten zu vermeiden
const ChevronDown =
  '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-gray-500 transition-transform duration-200"><path d="m6 9 6 6 6-6"/></svg>';
const SearchIcon =
  '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-gray-400"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>';

// Kategorie-Icons als SVG
interface CategoryIcons {
  [key: string]: string;
}

const categoryIcons: CategoryIcons = {
  allgemein:
    '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-2"><path d="M3 3h18v18H3z"/><path d="M8 12h8"/><path d="M12 8v8"/></svg>',
  konto:
    '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-2"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>',
  technik:
    '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-2"><rect width="20" height="14" x="2" y="5" rx="2"/><path d="M2 10h20"/></svg>',
};

// Locale + i18n
const locale = getLocale(Astro.url.pathname);
const t = getI18n(locale);

// Helper to build locale-aware internal links
const localizePath = (path: string) => (locale === 'en' ? `/en${path}` : path);

// Build FAQ categories dynamically from locale JSON
const dict = locale === 'de' ? deTranslations : enTranslations;
const categoriesData = (dict?.faq?.categories ?? {}) as Record<string, any>;
const orderedIds = ['allgemein', 'konto', 'technik'].filter((id) => id in categoriesData);
const faqCategories = orderedIds.map((id) => ({
  id,
  title: categoriesData[id]?.title ?? id,
  icon: id,
  items: (categoriesData[id]?.items ?? []) as Array<{ question: string; answer: string }>,
}));
---

<BaseLayout title={t('faq.title')}>
  <!-- Hero Section -->
  <section
    class="py-16 md:py-24 allow-section-bg bg-gradient-to-br from-primary/5 to-purple-500/5 dark:from-gray-800 dark:to-gray-900"
  >
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1
          class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 dark:text-white [text-shadow:_0_1px_0_rgb(255_255_255_/_0.6)] dark:[text-shadow:_0_1px_0_rgb(0_0_0_/_0.35)]"
        >
          {t('faq.hero.heading')}
        </h1>
        <p class="text-xl text-gray-700 dark:text-gray-300">
          {t('faq.hero.subtitle')}
        </p>

        <!-- Suchleiste -->
        <div class="mt-10 max-w-2xl mx-auto relative">
          <div class="relative">
            <input
              type="text"
              id="faq-search"
              placeholder={t('faq.search_placeholder')}
              class="w-full px-5 py-4 pr-12 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all duration-200"
            />
            <span
              class="absolute right-4 top-1/2 transform -translate-y-1/2"
              set:html={SearchIcon}
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <ContactTeaser />

  <!-- FAQ Content (transparent to reveal landing background) -->
  <section class="py-16 md:py-20 bg-transparent min-h-[50vh]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Kategorien-Navigation -->
        <div class="flex flex-wrap gap-3 mb-10 justify-center" id="faq-categories">
          <button
            type="button"
            class="px-4 py-2 rounded-full bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300 font-medium text-sm transition-colors duration-200 focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2 focus-visible:outline-none hover:bg-gray-200 dark:hover:bg-gray-700 aria-[pressed=true]:bg-emerald-100 aria-[pressed=true]:text-emerald-800 aria-[pressed=true]:dark:bg-emerald-900/30 aria-[pressed=true]:dark:text-emerald-400"
            data-category="all"
            aria-pressed="true"
          >
            {t('faq.categories.all')}
          </button>
          {
            faqCategories.map((category) => (
              <div data-category={category.id}>
                <button
                  type="button"
                  class="px-4 py-2 rounded-full bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300 font-medium text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors duration-200 flex items-center gap-2 focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2 focus-visible:outline-none aria-[pressed=true]:bg-emerald-100 aria-[pressed=true]:text-emerald-800 aria-[pressed=true]:dark:bg-emerald-900/30 aria-[pressed=true]:dark:text-emerald-400"
                  data-category={category.id}
                  aria-pressed="false"
                >
                  <span
                    class="w-5 h-5 flex items-center justify-center"
                    set:html={categoryIcons[category.id] || categoryIcons.allgemein}
                  />
                  <span>{category.title}</span>
                </button>
              </div>
            ))
          }
        </div>

        <!-- FAQ-Liste -->
        <div class="space-y-4" id="faq-container">
          {
            faqCategories.map((category) => (
              <div class="space-y-4" data-category={category.id} data-faq-section>
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                  <span
                    class="w-5 h-5 mr-2"
                    set:html={categoryIcons[category.id] || categoryIcons.allgemein}
                  />
                  <span>{category.title}</span>
                </h2>

                <div class="space-y-4">
                  {category.items.map((item, index) => {
                    const itemId = `faq-${category.id}-${index}`;
                    return (
                      <Card
                        as="div"
                        className="faq-item rounded-xl overflow-hidden"
                        data-faq-item
                        data-category={category.id}
                        data-question={item.question}
                        data-answer={item.answer}
                      >
                        <button
                          class="w-full px-6 py-5 text-left flex items-center justify-between focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-emerald-500 focus-visible:ring-offset-2 group hover:bg-gray-50/80 dark:hover:bg-gray-700/80 transition-colors duration-200"
                          aria-expanded="false"
                          aria-controls={itemId}
                          id={`${itemId}-button`}
                          data-faq-accordion-button
                          type="button"
                        >
                          <span class="font-medium text-gray-900 dark:text-white">
                            {item.question}
                          </span>
                          <span
                            class="text-gray-400 dark:text-gray-400 transition-transform duration-200 group-aria-expanded:rotate-180"
                            set:html={ChevronDown}
                          />
                        </button>
                        <div
                          id={itemId}
                          class="px-6 py-4 hidden text-gray-600 dark:text-gray-300"
                          data-faq-accordion-content
                          aria-labelledby={`${itemId}-button`}
                          hidden
                        >
                          <div class="flex items-center">
                            <div class="w-1.5 h-1.5 rounded-full bg-emerald-400 mr-3 flex-shrink-0" />
                            <p class="leading-relaxed text-gray-700 dark:text-gray-300">
                              {item.answer}
                            </p>
                          </div>
                        </div>
                      </Card>
                    );
                  })}
                </div>
              </div>
            ))
          }
        </div>

        <!-- No Results -->
        <div id="no-results" data-faq-no-results class="hidden text-center py-10">
          <div class="text-6xl mb-4">
            <Icon name="search" class="w-14 h-14 text-gray-400 mx-auto" ariaLabel="Search" />
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
            {t('faq.no_results.title')}
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            {t('faq.no_results.description_before')}
            <a
              href={localizePath('/kontakt')}
              class="text-emerald-600 hover:text-emerald-500 dark:text-emerald-400 dark:hover:text-emerald-300 font-medium"
              >{t('faq.no_results.description_link_text')}</a
            >{t('faq.no_results.description_after')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section
    class="py-16 allow-section-bg bg-gradient-to-br from-emerald-100 to-cyan-100 dark:from-gray-800 dark:to-gray-900"
  >
    <div class="container mx-auto px-4">
      <div
        class="max-w-4xl mx-auto bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden"
      >
        <div class="grid md:grid-cols-2">
          <!-- Contact Form -->
          <div class="p-8 md:p-10">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
              {t('pages.kontakt.form.heading')}
            </h2>
            <p class="text-gray-600 dark:text-gray-300 mb-6">{t('pages.kontakt.hero.subtitle')}</p>

            <form class="space-y-4">
              <div>
                <label
                  for="faq-email"
                  class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                  >{t('pages.kontakt.form.fields.email.label')}</label
                >
                <input
                  type="email"
                  id="faq-email"
                  name="email"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition duration-200"
                />
              </div>

              <div>
                <label
                  for="faq-message"
                  class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
                  >{t('pages.kontakt.form.fields.message.label')}</label
                >
                <textarea
                  id="faq-message"
                  name="message"
                  rows="4"
                  required
                  class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition duration-200"
                  placeholder={t('pages.kontakt.form.fields.message.placeholder')}></textarea>
              </div>

              <div class="flex items-start">
                <input
                  id="faq-privacy"
                  name="privacy"
                  type="checkbox"
                  required
                  class="h-4 w-4 mt-1 text-emerald-600 focus:ring-emerald-500 border-gray-300 rounded"
                />
                <label
                  for="faq-privacy"
                  class="ml-2 block text-sm text-gray-700 dark:text-gray-300"
                >
                  {t('pages.kontakt.form.privacy_policy.agree_prefix')}<a
                    href={localizePath('/datenschutz')}
                    class="text-emerald-600 hover:text-emerald-500 dark:text-emerald-400 dark:hover:text-emerald-300"
                    >{t('pages.kontakt.form.privacy_policy.link_text')}</a
                  >{t('pages.kontakt.form.privacy_policy.agree_suffix')}
                </label>
              </div>

              <div class="pt-2">
                <button
                  type="submit"
                  class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gradient-to-r from-emerald-500 to-cyan-500 hover:from-emerald-600 hover:to-cyan-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition duration-200"
                >
                  {t('pages.kontakt.form.submit_button')}
                </button>
              </div>
            </form>
          </div>

          <!-- Contact Info -->
          <div
            class="bg-gradient-to-br from-emerald-100 to-cyan-100 dark:from-gray-800 dark:to-gray-900 p-8 md:p-10 flex flex-col justify-center"
          >
            <div class="space-y-6">
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                  {t('pages.kontakt.info.heading')}
                </h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm">
                  {t('pages.kontakt.info.subtitle')}
                </p>
              </div>

              <div class="space-y-4">
                <div class="flex items-start">
                  <div
                    class="flex-shrink-0 h-10 w-10 rounded-lg bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center"
                  >
                    <svg
                      class="h-5 w-5 text-emerald-600 dark:text-emerald-400"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      ></path>
                    </svg>
                  </div>
                  <div class="ml-4">
                    <p class="text-sm font-medium text-gray-900 dark:text-white">
                      {t('pages.kontakt.info.email_label')}
                    </p>
                    <a
                      href={`mailto:${t('pages.kontakt.info.email_address')}`}
                      class="text-sm text-emerald-600 hover:text-emerald-500 dark:text-emerald-400 dark:hover:text-emerald-300"
                      >{t('pages.kontakt.info.email_address')}</a
                    >
                  </div>
                </div>

                <div class="flex items-start">
                  <div
                    class="flex-shrink-0 h-10 w-10 rounded-lg bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center"
                  >
                    <svg
                      class="h-5 w-5 text-emerald-600 dark:text-emerald-400"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                      ></path>
                    </svg>
                  </div>
                  <div class="ml-4">
                    <p class="text-sm font-medium text-gray-900 dark:text-white">
                      {t('pages.kontakt.info.phone_label')}
                    </p>
                    <p class="text-sm text-gray-600 dark:text-gray-300">
                      {t('pages.kontakt.info.support_hours')}
                    </p>
                    <a
                      href={`tel:${t('pages.kontakt.info.phone_number')}`}
                      class="text-sm text-emerald-600 hover:text-emerald-500 dark:text-emerald-400 dark:hover:text-emerald-300"
                      >{t('pages.kontakt.info.phone_number')}</a
                    >
                  </div>
                </div>
              </div>

              <div class="pt-4">
                <p class="text-xs text-gray-500 dark:text-gray-400">
                  {t('pages.kontakt.info.response_time_label')}
                  <span class="font-medium">{t('pages.kontakt.info.response_time')}</span>
                  {t('pages.kontakt.info.response_time_unit')}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script type="module">
    const categoryButtons = Array.from(document.querySelectorAll('#faq-categories button'));
    const searchInput = document.querySelector('#faq-search');
    const faqItems = Array.from(document.querySelectorAll('[data-faq-item]'));
    const sections = Array.from(document.querySelectorAll('div[data-faq-section]')).filter((section) =>
      section.querySelector('[data-faq-item]'),
    );
    const noResults = document.querySelector('[data-faq-no-results]');

    if (categoryButtons.length && faqItems.length && sections.length) {
      const debounce = (fn, delay) => {
        let timeout;
        return () => {
          window.clearTimeout(timeout);
          timeout = window.setTimeout(fn, delay);
        };
      };

      let activeCategory = 'all';

      const toggleAccordion = (button) => {
        const expanded = button.getAttribute('aria-expanded') === 'true';
        const controls = button.getAttribute('aria-controls') ?? '';
        const content = document.getElementById(controls);
        button.setAttribute('aria-expanded', (!expanded).toString());
        if (content) {
          content.toggleAttribute('hidden', expanded);
        }
      };

      const applyFilters = () => {
        const query = (searchInput?.value ?? '').trim().toLowerCase();

        let visibleCount = 0;

        sections.forEach((section) => {
          let sectionVisibleCount = 0;

          section.querySelectorAll('[data-faq-item]').forEach((item) => {
            const itemCategory = item.dataset.category ?? 'all';
            const matchesCategory = activeCategory === 'all' || itemCategory === activeCategory;
            const question = (item.dataset.question ?? '').toLowerCase();
            const answer = (item.dataset.answer ?? '').toLowerCase();
            const matchesQuery = query === '' || question.includes(query) || answer.includes(query);

            const isVisible = matchesCategory && matchesQuery;
            item.toggleAttribute('hidden', !isVisible);
            if (!isVisible) {
              const accordionButton = item.querySelector('[data-faq-accordion-button]');
              const content = item.querySelector('[data-faq-accordion-content]');
              if (accordionButton && content) {
                accordionButton.setAttribute('aria-expanded', 'false');
                content.setAttribute('hidden', '');
              }
            }

            if (isVisible) {
              sectionVisibleCount += 1;
            }
          });

          section.toggleAttribute('hidden', sectionVisibleCount === 0);
          visibleCount += sectionVisibleCount;
        });

        if (noResults) {
          noResults.toggleAttribute('hidden', visibleCount !== 0);
        }
      };

      const handleCategoryClick = (button) => {
        const selected = button.dataset.category ?? 'all';
        if (selected === activeCategory) return;

        activeCategory = selected;

        categoryButtons.forEach((btn) => {
          btn.setAttribute('aria-pressed', (btn === button).toString());
        });

        applyFilters();
      };

      const debouncedApplyFilters = debounce(applyFilters, 150);

      categoryButtons.forEach((button) => {
        button.addEventListener('click', () => handleCategoryClick(button));
      });

      faqItems.forEach((item) => {
        const accordionButton = item.querySelector('[data-faq-accordion-button]');
        if (accordionButton) {
          accordionButton.addEventListener('click', () => toggleAccordion(accordionButton));
        }
      });

      searchInput?.addEventListener('input', debouncedApplyFilters);
    }
  </script>
</BaseLayout>
